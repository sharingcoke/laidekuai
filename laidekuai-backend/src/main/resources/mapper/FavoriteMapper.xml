<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laidekuai.favorite.mapper.FavoriteMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.laidekuai.favorite.entity.Favorite">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="created_at" property="createdAt"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 查询用户是否已收藏 -->
    <select id="selectByUserAndGoods" resultMap="BaseResultMap">
        SELECT * FROM favorite
        WHERE user_id = #{userId}
          AND goods_id = #{goodsId}
          AND deleted = 0
    </select>

    <!-- 统计商品收藏数 -->
    <select id="countByGoodsId" resultType="int">
        SELECT COUNT(*) FROM favorite
        WHERE goods_id = #{goodsId}
          AND deleted = 0
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laidekuai.address.mapper.AddressMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.laidekuai.address.entity.Address">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="receiver_name" property="receiverName"/>
        <result column="receiver_phone" property="receiverPhone"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="district" property="district"/>
        <result column="detail" property="detail"/>
        <result column="is_default" property="isDefault"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, user_id, receiver_name, receiver_phone, province, city, district, detail,
        is_default, status, created_at, updated_at, deleted
    </sql>

    <!-- 根据用户ID查询地址列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM address
        WHERE user_id = #{userId}
          AND deleted = 0
        ORDER BY is_default DESC, created_at DESC
    </select>

    <!-- 统计用户地址数量 -->
    <select id="countByUserId" resultType="int">
        SELECT COUNT(*)
        FROM address
        WHERE user_id = #{userId}
          AND deleted = 0
    </select>

    <!-- 获取用户默认地址 -->
    <select id="selectDefaultByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM address
        WHERE user_id = #{userId}
          AND is_default = 1
          AND deleted = 0
        LIMIT 1
    </select>

</mapper>
